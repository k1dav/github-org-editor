{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug API routes",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": [
        "dev"
        // "--turbopack"
      ],
      "cwd": "${workspaceFolder}",
